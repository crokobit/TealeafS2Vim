<%= render 'shared/error_partial', errors: @post.errors %>


<div class="row">
  <%= form_for @post do |f| %>
    <div class="control-group">
        <%= f.label  :title %>
        <%= f.text_field  :title %>
    </div>
    <div class="control-group">
        <%= f.label  :url %>
        <%= f.text_field :url %>
    </div>
    <div class="control-group">
        <%= f.label :description %>
        <%= f.text_field :description %>
    </div>
    <div class="control-group">
        <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
    </div>
    <%= f.submit "submit" %>
  <% end %>
</div>
