
<div class="row">
  <div class="span0 well text-center">

  <% if logged_in? %>
    <%= link_to  vote_post_comment_path(comment.post,comment, vote: true), method: 'post'  do %>
      <i class="icon-arrow-up"></i>      
    <% end %>
  <% end %>

  <br>

  <%= comment.total_votes_number %> votes

  <br>

  <% if logged_in? %>
    <%= link_to  vote_post_comment_path(comment.post,comment,vote: false ), method: 'post'  do %>
      <i class="icon-arrow-down"></i>      
    <% end %>
  <% end %>

  </div>

  <div class="span8 well">
    <em><%= comment.body  %></em>
    <div class="quiet">created by</div><%= link_to comment.creator.name, user_path(comment.creator) %>
    <small>created at <%= display_datetime(comment.created_at) %></small>
  </div>
</div>
