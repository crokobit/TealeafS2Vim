<div class="well">
  <%= form_for @user do |f| %>
    <div class="control-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="control-group">
      <%= f.label :password  %>
      <%= f.password_field :password %>
    </div>
    <div class="control-group">
      <%= f.label :time_zone %>
      <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, default: Time.zone.name %>
    </div>
    <%= f.submit "submit", class: 'btn btn-success'%>
  <% end %>
</div>
